<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>
  <link rel="shortcut icon" href="/images/cloud.jpeg" type="image/x-icon">
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <div class="main-container">
    {{>header}}
    <section class="weather-form">
      <form>
        <input type="text" autocomplete="on" placeholder="Enter your address..">
        <div class="btn-grp">
          <button type="submit">Submit</button>
          <button type="reset">Reset</button>
        </div>
      </form>
    </section>

    <section class="weather-info">
      <h3 class="city" id="cityoutput"></h3>
      <div class="info">
        <p id="description"></p>
        <p id="temp"></p>
        <p id="wind"></p>
      </div>
    </section>

    <div class="loading-overlay">
      <span class="fas">Loading...</span>
    </div>

  </div>
  {{>footer}}

  <script src="/js/app.js"></script>
</body>

</html>